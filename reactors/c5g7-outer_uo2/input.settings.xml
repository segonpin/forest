<?xml version="1.0" encoding="utf-8"?>
<settings>
  
  <!-- 
    Here we define the different materials associated to the
    material id specified when defining the geometry 
  -->
  
  <!-- dimension -->
  <dim>2</dim>
  
  <!-- input files -->
  <input_files>
    <out>input.out.power.xml</out>
    <geom>input.geom.xml</geom>
    <mat>input.mat.xml</mat>
    <bcs>input_bc_ass_4.xml</bcs>
  </input_files>

  <!-- output options -->
  <output>
    <print_mesh>true</print_mesh>
    <vtk_power>true</vtk_power>
    <vtk_flux>true</vtk_flux>
    <vtk_mat>true</vtk_mat>
    <ass_bcs>false</ass_bcs> <!-- I have to add it to the reader -->
  </output>

  <coarsening_bcs>
    <spatial>0</spatial>
    <angular>0</angular>
    <energy>0</energy>
  </coarsening_bcs>
  
  <geometry>
    <n_ref>1</n_ref>
  </geometry>
  
  <!-- problem -->
  <problem type="transport">
    <approximation type="sn">
      <sn>8</sn>
    </approximation>
  </problem>
  
  <!-- algebra -->
  <algebra>
    <eig_solver type="PI">
      <tol>1.e-6</tol>
      <max_it>1000</max_it>
    </eig_solver>
    <inner_solver type="Krylov">
      <tol>1.e-7</tol>
      <max_it>1000</max_it>
    </inner_solver>
  </algebra>
  
  <!-- finite elements -->
  <fe_settings>
    <degree>2</degree>
  </fe_settings>
  
</settings>


